let isScrubbing1 = false
let wasPaused1
function toggleScrubbing(e) {
  const rect = timeline1Container1.getBoundingClientRect()
  const percent = Math.min(Math.max(0, e.x - rect.x), rect.width) / rect.width
  isScrubbing1 = (e.buttons & 1) === 1
  videoContainer1.classList.toggle("scrubbing", isScrubbing1)
  if (isScrubbing1) {
    wasPaused1 = video1.paused1
    video1.pause()
  } else {
    video1.currentTime = percent * video1.duration
    if (!wasPaused1) video1.play()
  }

  handleTimelineUpdate(e)
}

function handleTimelineUpdate(e) {
  const rect = timeline1Container1.getBoundingClientRect()
  const percent = Math.min(Math.max(0, e.x - rect.x), rect.width) / rect.width
  const previewImg1Number = Math.max(
    1,
    Math.floor((percent * video1.duration) / 10)
  )
  const previewImg1Src = `assets/previewImg1s/preview${previewImg1Number}.jpg`
  previewImg1.src = previewImg1Src
  timeline1Container1.style.setProperty("--preview-position", percent)

  if (isScrubbing1) {
    e.preventDefault()
    thumbnailImg1.src = previewImg1Src
    timeline1Container1.style.setProperty("--progress-position", percent)
  }
}

