const leadingZeroFormatter1 = new Intl.NumberFormat(undefined, {
  minimumIntegerDigits: 2,
})
function formatDuration(time) {
  const seconds = Math.floor(time % 60)
  const minutes = Math.floor(time / 60) % 60
  const hours = Math.floor(time / 3600)
  if (hours === 0) {
    return `${minutes}:${leadingZeroFormatter1.format(seconds)}`
  } else {
    return `${hours}:${leadingZeroFormatter1.format(
      minutes
    )}:${leadingZeroFormatter1.format(seconds)}`
  }
}

