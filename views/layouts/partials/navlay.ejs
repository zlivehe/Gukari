 <script>
     const searchbutton = document.querySelector('.searchbutton')
     const navfull = document.querySelector('.navfull')
     const navitemscontent = document.querySelector('.navitemscontent')
     const mobilesearch  =  document.querySelector('.mobilesearch')
 
     navitemscontent.addEventListener('click', () => {
         navfull.classList.remove('hidden')
         mobilesearch.classList.add('hidden')
     })
     searchbutton.addEventListener('click', () => {
         navfull.classList.add('hidden')
         
         mobilesearch.classList.remove('hidden')
     })
     const defaultsearch = document.getElementById('default-search')
 const navclass = document.querySelector('.navclass')
 defaultsearch.addEventListener('blur', function () {
     navclass.classList.add('hidden');
 });
 defaultsearch.addEventListener('keydown', async function (e) {
     console.log(e)
     const searchTerm = defaultsearch.value.trim();
      //if i press enter key
      if (e.key === 'Enter' || e.key === 'Return') { // Check if the key pressed is Enter or Return
         e.preventDefault(); // Prevent the default form submission
         window.location.href = `/home/results/search_query/${searchTerm}`;
     }
     navclass.innerHTML = '';
 
     if (searchTerm === '') {
         navclass.classList.add('hidden');
         return;
     }
     // Use 'Enter' to detect the Enter key press    
 
    
   
 
     try {
         
         const response = await fetch(`/search?term=${searchTerm}`);
 
         if (!response.ok) {
             throw new Error('Network response was not ok');
         }
        
         const data = await response.json();
 
         const resultsList = document.createElement('ul');
         data.forEach((item) => {
             const li = document.createElement('li');
             li.textContent = item.title;
             li.classList.add('px-4', 'py-2', 'text-sm', 'text-gray-700', 'hover:bg-gray-100','cursor-pointer');
             li.addEventListener('click', () => {
                 window.location.href = `/home/results/search_query/${item.title}`;
             });
 
             resultsList.appendChild(li);
 
         });
 
         navclass.appendChild(resultsList);
         navclass.classList.remove('hidden');
           // Use 'Enter' to detect the Enter key press
           console.log('Enter key pressed');
     
     } catch (error) {
         console.error('Error fetching data:', error);
     }
 });
 
 </script>
 
