   <script>
function calculateScore() {
    // Get values from inputs
    const mcqReading = parseFloat(document.getElementById("mcqReading").value) || 0;
    const mcqWriting = parseFloat(document.getElementById("mcqWriting").value) || 0;
    const frqSynthesis = parseFloat(document.getElementById("frqSynthesis").value) || 0;
    const frqRhetorical = parseFloat(document.getElementById("frqRhetorical").value) || 0;
    const frqArgument = parseFloat(document.getElementById("frqArgument").value) || 0;

    // Calculate weighted MCQ score
    const mcqWeighted = (mcqReading + mcqWriting) * 1.2499;

    // Calculate weighted scores for each essay
    const frqSynthesisWeighted = frqSynthesis * 3.0556;
    const frqRhetoricalWeighted = frqRhetorical * 3.0556;
    const frqArgumentWeighted = frqArgument * 3.0556;

    // Calculate total weighted FRQ score
    const frqWeightedTotal = frqSynthesisWeighted + frqRhetoricalWeighted + frqArgumentWeighted;

    // Calculate the composite score
    const totalScore = mcqWeighted + frqWeightedTotal;

    // Update results
    document.getElementById("mcqResult").innerText = mcqWeighted.toFixed(2);
    document.getElementById("frqResult").innerText = frqWeightedTotal.toFixed(2);
    document.getElementById("totalScore").innerText = totalScore.toFixed(2);
    
    // Convert composite score to the AP Score (1-5)
    let predictedAPScore;
    if (totalScore <= 49) {
        predictedAPScore = 1;
    } else if (totalScore <= 75) {
        predictedAPScore = 2;
    } else if (totalScore <= 91) {
        predictedAPScore = 3;
    } else if (totalScore <= 103) {
        predictedAPScore = 4;
    } else {
        predictedAPScore = 5;
    }

    document.getElementById("predictedScore").innerText = predictedAPScore;
}
    
    </script>